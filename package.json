{
  "name": "shadowarp",
  "version": "1.0.0",
  "description": "NVIDIA ShadowPlay replica",
  "author": "yogourt20",
  "main": "dist-electron/main/index.js",
  "scripts": {
    "build:main": "tsup src/main/index.ts src/preload/index.ts --out-dir dist-electron --format cjs --external electron",
    "dev": "concurrently \"vite\" \"bun run build:main --watch\" \"wait-on tcp:3000 && electron .\"",
    "build": "bun run build:main && vite build && electron-builder"
  },
  "build": {
    "appId": "com.shadowarp.app",
    "productName": "ShadowWarp",
    "directories": {
      "output": "release"
    },
    "npmRebuild": false,
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "package.json"
    ],
    "asarUnpack": [
      "**/*.{node,exe,dll}"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "public/icon.png"
    }
  },
  "dependencies": {
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "ffmpeg-static": "^5.3.0",
    "lucide-react": "^0.475.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "uiohook-napi": "^1.5.4"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^29.1.5",
    "electron-builder": "^24.13.3",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vite": "^5.1.6",
    "wait-on": "^7.2.0"
  }
}